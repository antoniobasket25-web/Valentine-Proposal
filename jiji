<script>
  const noBtn = document.getElementById('no');
  const siBtn = document.getElementById('si');

  // Hacer que NO se escape
  document.addEventListener('mousemove', (e) => {
    const x = e.clientX;
    const y = e.clientY;
    const rect = noBtn.getBoundingClientRect();
    const offset = 100;
    if (
      x > rect.left - offset &&
      x < rect.right + offset &&
      y > rect.top - offset &&
      y < rect.bottom + offset
    ) {
      const newX = Math.random() * (window.innerWidth - rect.width);
      const newY = Math.random() * (window.innerHeight - rect.height);
      noBtn.style.left = newX + 'px';
      noBtn.style.top = newY + 'px';
    }
  });

  // FunciÃ³n para crear corazones flotando
  function crearCorazon() {
    const corazon = document.createElement('div');
    corazon.classList.add('corazon');
    corazon.textContent = 'ğŸ’–';
    corazon.style.left = Math.random() * window.innerWidth + 'px';
    corazon.style.fontSize = (20 + Math.random() * 30) + 'px';
    document.body.appendChild(corazon);
    setTimeout(() => corazon.remove(), 3000);
  }

  // Evento al pulsar SI
  siBtn.addEventListener('click', () => {
    alert('Â¡Yupi! ğŸ’– Gracias por decir que sÃ­ ğŸ˜');
    // Crear 50 corazones
    for (let i = 0; i < 50; i++) {
      setTimeout(crearCorazon, i * 50);
    }
  });
</script>
